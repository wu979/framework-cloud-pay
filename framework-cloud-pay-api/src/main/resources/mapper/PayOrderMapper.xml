<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.framework.cloud.pay.infrastructure.mapper.PayOrderMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.framework.cloud.pay.domain.entity.PayOrder">
        <id column="id" property="id"/>
        <result column="num" property="num"/>
        <result column="business_id" property="businessId"/>
        <result column="order_amount" property="orderAmount"/>
        <result column="remarks" property="remarks"/>
        <result column="tenant_id" property="tenantId"/>
        <result column="create_id" property="createId"/>
        <result column="update_id" property="updateId"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="deleted" property="deleted"/>
        <result column="version" property="version"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        po.id, po.num, po.business_id, po.order_amount, po.remarks , po.tenant_id, po.create_id, po.update_id, po.create_time, po.update_time, po.deleted, po.version
    </sql>

    <select id="page" resultType="com.framework.cloud.pay.common.vo.PayOrderPageVO">
        select
            <include refid="Base_Column_List"/>
        from t_pay_order po
        where po.deleted = 1
    </select>
</mapper>